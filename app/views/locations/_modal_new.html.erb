<%= form_with model: @location, data: { turbo_frame: "locations_table" } do |f| %>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :latitude %>
      <%= f.number_field :latitude, step: :any, class: "form-control", required: true %>
    </div>

    <div class="col">
      <%= f.label :longitude %>
      <%= f.number_field :longitude, step: :any, class: "form-control", required: true %>
    </div>
  </div>

  <div class="mt-3">
    <%= f.label :radius, "Radius (meters)" %>
    <%= f.number_field :radius, class: "form-control", required: true %>
  </div>

  <div class="mt-4 d-flex justify-content-end gap-2">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
      Cancel
    </button>

    <%= f.submit "Create Location", class: "btn btn-primary" %>
  </div>
<% end %>
