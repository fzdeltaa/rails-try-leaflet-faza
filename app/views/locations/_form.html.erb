<%= form_with model: location, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :latitude %>
    <%= f.number_field :latitude, step: :any, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :longitude %>
    <%= f.number_field :longitude, step: :any, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :radius %>
    <%= f.number_field :radius, class: "form-control" %>
  </div>

  <%= f.submit "Update Location", class: "btn btn-primary" %>
<% end %>
